        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name="by.yazazzello.forum.client.features.MainActivity"
            android:theme="@style/AppTheme.Simple">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="by.yazazzello.forum.client.features.thread.ForumThreadActivity"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0b5de49c1ee1db97ea16c7ddd4b0fef6f2f61f87"
            />
        
    </application>

</manifest>